<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="DefaultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textColor">@android:color/black</item>
        <item name="editTextBackground">@color/editText_background_DefaultTheme</item>
        <item name="editTextColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:textColorHint">@color/editTextHintColor_DefaultTheme</item>
        <item name="human_message_background">@color/human_message_color_DefaultTheme</item>
        <item name="robot_message_background">@color/robot_message_color_DefaultTheme</item>
        <item name="send_icon_color">@color/send_icon_color_DefaultTheme</item>
        <item name="chat_background_color">@color/chat_background_DefaultTheme</item>
        <item name="send_button_background">@color/send_button_background_DefaultTheme</item>
        <item name="toolbar_background">@color/toolbar_color_DefaultTheme</item>
        <item name="guide_icon_color">@color/guide_icon_color_DefaultTheme</item>
        <item name="setting_icon_color">@color/setting_icon_color_DefaultTheme</item>
        <item name="main_text_in_app_color">@color/main_text_color_DefaultTheme</item>
        <item name="back_icon_color">@color/back_icon_color_DefaultTheme</item>
        <item name="alertDialogTheme">@style/MyAlertDialogStyle</item>
        <item name="alertDialogStyle">@style/MyAlertDialogStyle</item>
        <item name="appearance_fragment_background_color">@color/appearance_fragment_background_DefaultTheme</item>
        <item name="about_fragment_background_color">@color/about_fragment_background_DefaultTheme</item>
        <item name="setting_activity_background_color">@color/setting_activity_background_color_DefaultTheme</item>
        <item name="message_text_size">@dimen/message_text_size</item>
        <item name="colorPrimaryDark">@color/toolbar_color_DefaultTheme</item>
    </style>

