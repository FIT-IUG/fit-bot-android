<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">



    <RelativeLayout
        android:id="@+id/chat_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:elevation="10dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="?attr/mainColorDark"
            app:layout_scrollFlags="scroll|enterAlways">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/logo_image" />

                        <ImageView
                            android:id="@+id/toolbar_connectivity_circle"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/online_circle" />

                    </FrameLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/toolbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_sans_web_bold"
                            android:gravity="center"
                            android:text="FIT-Bot"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/toolbar_connectivity_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/toolbar_title"
                            android:fontFamily="@font/pt_sans_web_regular"
                            android:text="Online"
                            android:visibility="gone"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>


        <!--List view for displaying chat messages-->

        <RelativeLayout
            android:id="@+id/chatBackground"
            android:background="?attr/mainColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/send_message_layout">
                <ImageView
                    android:id="@+id/background_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"/>
            </ScrollView>

            <ListView
                android:transcriptMode="alwaysScroll"
                android:isScrollContainer="false"
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/send_message_layout"
                android:divider="@null" />
            <!--To type and send the message-->
            <LinearLayout
                android:id="@+id/send_message_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="?attr/mainColorDark"
                android:elevation="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="299dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="9"
                    android:background="?attr/mainColorDark"
                    android:fontFamily="@font/pt_sans_web_regular"
                    android:gravity="right"
                    android:hint="رسالة جديدة"
                    android:imeOptions="actionSend"
                    android:layoutDirection="rtl"
                    android:padding="10dp"
                    android:textColor="?attr/textColor"
                    android:textDirection="rtl" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    app:rippleColor="?attr/mainColor"
                    android:backgroundTint="?attr/mainColorDark"
                    android:src="@drawable/ic_send"
                    android:outlineSpotShadowColor="?attr/mainColor"
                    android:outlineAmbientShadowColor="?attr/mainColor"
                    android:id="@+id/btn_send"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>